#!/bin/bash

TASKS="T2bw_x-025_mStop-100to475_mLSP-0to300_LeptonFilter T2bw_x-025_mStop-100to475_mLSP-0to375 T2bw_x-025_mStop-100to475_mLSP-1 T2bw_x-025_mStop-500to650_mLSP-150to300_LeptonFilter T2bw_x-025_mStop-500to800_mLSP-1 T2bw_x-025_mStop-500to80_mLSP-0to700 T2bw_x-050_mStop-100to475_mLSP-0to300_LeptonFilter T2bw_x-050_mStop-100to475_mLSP-0to375 T2bw_x-050_mStop-100to475_mLSP-1 T2bw_x-050_mStop-500to650_mLSP-150to300_LeptonFilter T2bw_x-050_mStop-500to800_mLSP-1 T2bw_x-050_mStop-500to80_mLSP-0to700 T2bw_x-075_mStop-100to475_mLSP-0to300_LeptonFilter T2bw_x-075_mStop-100to475_mLSP-0to375 T2bw_x-075_mStop-100to475_mLSP-1 T2bw_x-075_mStop-500to650_mLSP-150to300_LeptonFilter T2bw_x-075_mStop-500to800_mLSP-1 T2bw_x-075_mStop-500to80_mLSP-0to700 T2tb_mStop-100to375 T2tb_mStop-400to475 T2tb_mStop-500to575 T2tb_mStop-600to675 T2tb_mStop-700to750 T2tb_mStop-775to800 T2tb_mStop-825to875 T2tb_mStop-900to950 T2tb_mStop-975to1000 T2tt_mStop-150to350_mLSP-0to250 T2tt_mStop-150to475_mLSP-1 T2tt_mStop-375to475_mLSP-0to375 T2tt_mStop-500to650_mLSP-0to225 T2tt_mStop-500to650_mLSP-250to550 T2tt_mStop-500to800_mLSP-1 T2tt_mStop-675to800_mLSP-0to275 T2tt_mStop-675to800_mLSP-300to700 T2tt_mStop-825to900_mLSP-25to800 T2tt_mStop-925to1000_mLSP-25to900"

rm -f report.tmp
 
echo ", ----------------- - ------ - ----- - ----- - ---- - ------- - ------- ," >> report.tmp
echo "|        Task       |  Subm  |  Run  |  Err  |  OK  |  Clear  |  Total  |" >> report.tmp
echo "- ----------------- - ------ - ----- - ----- - ---- - ------- - ------- -" >> report.tmp

ALL_SUBMITTED=0
ALL_RUNNING=0
ALL_ERROR=0
ALL_OK=0
ALL_CLEAR=0
ALL_TOTAL=0

for TASK in $TASKS
do
    # Update if option is specified
    if [[ $1 == "-U" ]]
    then
        echo "  Checking status of $TASK ... "
        crab -status -c $TASK > $TASK/status.tmp 2>&1
    fi
    
    SUBMITTED=`cat $TASK/status.tmp | grep -E "^[0-9]"                              | grep "Submitted\|Scheduled" | wc -l`
    RUNNING=`  cat $TASK/status.tmp | grep -E "^[0-9]"                              | grep "Running"   | wc -l`
    ERROR=`    cat $TASK/status.tmp | grep -E "^[0-9]" | awk '{if ($5 != 0 || $6 != 0) print}' | grep -v "Submitted\|Scheduled\|Running" | wc -l`
    OK=`       cat $TASK/status.tmp | grep -E "^[0-9]" | awk '{if ($5 == 0 && $6 == 0) print}' | grep "Done"      | wc -l`
    CLEAR=`    cat $TASK/status.tmp | grep -E "^[0-9]" | awk '{if ($5 == 0) print}' | grep "Retrieved" | wc -l`
    TOTAL=`    cat $TASK/status.tmp | grep -E "^[0-9]" | wc -l`

    echo "| $TASK | $SUBMITTED | $RUNNING | $ERROR | $OK | $CLEAR | $TOTAL |" >> report.tmp

    ALL_SUBMITTED=`echo $ALL_SUBMITTED + $SUBMITTED | bc`
    ALL_RUNNING=`echo $ALL_RUNNING + $RUNNING | bc`
    ALL_ERROR=`echo $ALL_ERROR + $ERROR | bc`
    ALL_OK=`echo $ALL_OK + $OK | bc`
    ALL_CLEAR=`echo $ALL_CLEAR + $CLEAR | bc`
    ALL_TOTAL=`echo $ALL_TOTAL + $TOTAL | bc`

done

echo "- ----------------- - ------ - ----- - ----- - ---- - ------- - ------- -" >> report.tmp

echo "| All | $ALL_SUBMITTED | $ALL_RUNNING | $ALL_ERROR | $ALL_OK | $ALL_CLEAR | $ALL_TOTAL |" >> report.tmp

ALL_SUBMITTED=`echo $ALL_SUBMITTED "*" 100 / $ALL_TOTAL | bc`
ALL_RUNNING=`echo $ALL_RUNNING "*" 100 / $ALL_TOTAL | bc`
ALL_ERROR=`echo $ALL_ERROR "*" 100 / $ALL_TOTAL | bc`
ALL_OK=`echo $ALL_OK "*" 100 / $ALL_TOTAL | bc`
ALL_CLEAR=`echo $ALL_CLEAR "*" 100 / $ALL_TOTAL | bc`
ALL_TOTAL=`echo $ALL_TOTAL "*" 100 / $ALL_TOTAL | bc`

echo "| All(percent) | ${ALL_SUBMITTED}% | ${ALL_RUNNING}% | ${ALL_ERROR}% | ${ALL_OK}% | ${ALL_CLEAR}% | ${ALL_TOTAL}% |" >> report.tmp

echo "- ----------------- - ------ - ----- - ----- - ---- - ------- - ------- -" >> report.tmp
   
cat report.tmp | column -t

rm report.tmp
